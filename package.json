{
  "name": "simple-standup-bot",
  "version": "0.2.3",
  "description": "Dead Simple Standup Bot for Slack",
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "ports": "lt --port 3000 & lt --port 3001",
    "clean": "turbo daemon clean && rm -rf node_modules",
    "clean:workspaces": "turbo clean",
    "build": "turbo run build",
    "start": "turbo run start",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "db:migrate": "turbo run migrate",
    "db:generate": "turbo run generate",
    "docker:build": "./build.sh",
    "docker:start": "./start.sh"
  },
  "license": "MIT",
  "dependencies": {
    "turbo": "^1.10.12"
  },
  "devDependencies": {
    "@ianvs/prettier-plugin-sort-imports": "^4.1.0",
    "@turbo/gen": "^1.10.12",
    "eslint": "^8.47.0",
    "eslint-config-custom": "workspace:*",
    "prettier": "^3.0.2",
    "prettier-plugin-tailwindcss": "^0.5.3"
  }
}
