{
  "name": "ssb",
  "description": "Dead Simple Standup Bot for Slack",
  "main": "src/app.ts",
  "scripts": {
    "dev": "pnpm with-env nodemon src/app.ts",
    "start": "pnpm with-env ts-node --transpile-only src/app.ts",
    "production": "pm2 start npm --name 'ssb' -- start",
    "with-env": "dotenv -e ../../.env --",
    "clean": "rm -rf .turbo node_modules"
  },
  "license": "MIT",
  "dependencies": {
    "@slack/bolt": "^3.13.1",
    "@ssb/orm": "workspace:*",
    "@ssb/ui": "workspace:*",
    "@ssb/utils": "workspace:*",
    "body-parser": "^1.20.2",
    "cron": "^2.3.1",
    "cron-parser": "^4.8.1",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "pm2": "^5.3.0",
    "ts-node": "^10.9.1",
    "xstate": "^4.38.0"
  },
  "devDependencies": {
    "@types/body-parser": "^1.19.2",
    "@types/cron": "^2.0.1",
    "@types/express": "^4.17.17",
    "@types/node": "20.3.1",
    "@types/node-schedule": "^2.1.0",
    "dotenv-cli": "^7.2.1",
    "nodemon": "^2.0.22"
  }
}
